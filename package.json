{
  "name": "podcast-website",
  "version": "1.0.0",
  "description": "一个简单的播客网站，支持音频上传和播放",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm rebuild sqlite3",
    "postinstall": "npm rebuild sqlite3 && node init-data.js",
    "migrate": "node migrate-data.js",
    "backup": "node backup-data.js backup",
    "restore": "node backup-data.js restore",
    "db-backup": "node db-backup.js backup",
    "db-restore": "node db-backup.js restore"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "path": "^0.12.7",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "podcast",
    "audio",
    "upload",
    "播客"
  ],
  "author": "Your Name",
  "license": "MIT"
}
